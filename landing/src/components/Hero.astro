---
import { Image } from "astro:assets";
import HeroBg from "../assets/images/hero-bg.png";
---

<section
  id="top"
  class="relative flex items-center justify-center w-full min-h-screen overflow-hidden bg-yore-dark"
>
  <div class="absolute inset-0">
    <Image
      src={HeroBg}
      alt="Hero Background"
      class="absolute inset-0 z-0 object-cover w-full h-full mix-blend-luminosity"
    />
    <div class="absolute inset-0 z-10 bg-yore-dark/70 lg:bg-yore-dark/20"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-6xl px-6 mx-auto text-center">
    <div class="mb-4 lg:mb-8">
      <img
        src="/yore-logo.png"
        alt="Yore"
        class="w-48 h-auto mx-auto mb-4 lg:w-60"
      />
    </div>

    <h1 class="leading-tight text-yore-primary">
      Explore, Log, and Share Your Historical Adventures
    </h1>

    <p
      class="mx-auto mb-8 text-xl font-light leading-relaxed text-gray-300 lg:text-3xl font-body"
    >
      Discover hidden history with advanced mapping and AI analysis. Join a
      community of explorers documenting and learning about archaeological sites
      with cutting-edge technology.
    </p>

    <!-- CTA Buttons -->
    <div
      class="flex flex-col items-center justify-center gap-4 mx-auto sm:flex-row max-w-48 lg:max-w-6xl"
    >
      <a
        href="#what-is-yore"
        class="w-full px-8 py-3 font-semibold text-white transition-colors rounded-lg bg-yore-primary hover:bg-yore-primary/90 lg:w-auto"
      >
        Learn more
      </a>
      <a
        href="#signup"
        class="w-full px-8 py-3 font-semibold text-white transition-colors bg-transparent border-2 border-white rounded-lg hover:bg-white hover:text-gray-900 lg:w-auto"
      >
        Sign up
      </a>
    </div>
  </div>
</section>
