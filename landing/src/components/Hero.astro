---
import { Image } from "astro:assets";
import HeroBg from "../assets/images/hero-bg.png";
---

<section
  id="top"
  class="relative min-h-screen flex w-full items-center justify-center overflow-hidden bg-yore-dark"
>
  <div class="absolute inset-0">
    <Image
      src={HeroBg}
      alt="Hero Background"
      class="absolute inset-0 w-full h-full object-cover mix-blend-luminosity z-0"
    />
    <div class="absolute inset-0 bg-yore-dark/70 lg:bg-yore-dark/20 z-10"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 text-center px-6 max-w-6xl mx-auto">
    <div class="mb-4 lg:mb-8">
      <img
        src="/yore-logo.png"
        alt="Yore"
        class="w-48 lg:w-60 h-auto mx-auto mb-4"
      />
    </div>

    <h1 class="leading-tight text-yore-primary">
      Explore, Log, and Share Your Historical Adventures
    </h1>

    <p
      class="text-xl lg:text-3xl text-gray-300 mb-8 mx-auto leading-relaxed font-body font-light"
    >
      Join a community of history enthusiasts. Yore is your personal journal for
      documenting and sharing archaeological discoveries and historical site
      visits.
    </p>

    <!-- CTA Buttons -->
    <div
      class="flex flex-col sm:flex-row gap-4 justify-center items-center max-w-48 lg:max-w-6xl mx-auto"
    >
      <a
        href="#what-is-yore"
        class="bg-yore-primary hover:bg-yore-primary/90 text-white px-8 py-3 rounded-lg font-semibold transition-colors w-full lg:w-auto"
      >
        Learn more
      </a>
      <a
        href="#signup"
        class="bg-transparent border-2 border-white text-white hover:bg-white hover:text-gray-900 px-8 py-3 rounded-lg font-semibold transition-colors w-full lg:w-auto"
      >
        Sign up
      </a>
    </div>
  </div>
</section>
