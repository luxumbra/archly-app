---
import MapIcon from "../assets/icons/map.svg";
import ArIcon from "../assets/icons/ar.svg";
import LidarIcon from "../assets/icons/lidar.svg";
import JournalIcon from "../assets/icons/journal.svg";
import AchievementsIcon from "../assets/icons/achievements.svg";
import CommunityIcon from "../assets/icons/community.svg";
import ConnectIcon from "../assets/icons/connect.svg";
import AiIcon from "../assets/icons/ai.svg";
import ArticlesIcon from "../assets/icons/articles.svg";
import NewsIcon from "../assets/icons/news.svg";
import { AnimateFeatures } from "./animation/Animations";

const exploreFeatures = [
  {
    icon: MapIcon,
    title: "Interactive Map",
    subtitle: "Discover historical sites around the world.",
    description:
      "Discover historical sites near you or plan your next adventure. Browse the world, search for specific places and Filter results by era, site type, or archaeological significance to find exactly what sparks your curiosity.",
  },
  {
    icon: AiIcon,
    title: "AI Enhanced",
    subtitle: "Meet the Yoreacle: Your AI Archaeology Expert",
    description:
      "Ask our AI historian anything about any site, anywhere in the world. Get instant analysis of historical significance, construction techniques, cultural context, and archaeological discoveries. It's like having a personal archaeology professor in your pocket.",
  },
  {
    icon: LidarIcon,
    title: "LiDAR & Hidden Layers",
    subtitle: "Reveal what lies beneath.",
    description:
      "Reveal what archaeologists see beneath the surface. Our LiDAR overlays expose hidden foundations, buried structures, and ancient field systems invisible to the naked eye. Explore sites like a professional researcher.",
  },
];

const logFeatures = [
  {
    icon: JournalIcon,
    title: "Personal Journals",
    subtitle: "Capture memories and insights.",
    description:
      "Document every discovery with Yore's comprehensive logging tools. Capture photos, record insights, save GPS coordinates, and build your personal archive of historical adventures. Each log, photo, and review you share helps you earn points and progress towards new achievements.",
  },
  {
    icon: AchievementsIcon,
    title: "Recognition & Rewards",
    subtitle: "Celebrate Your Curiosity",
    description:
      "Every contribution—whether it’s a photo, a review, favourite a site, or a new discovery—earns you points and unlocks unique achievements. Your progress is tracked onchain for authenticity and sovereignty. See how you rank, collect badges, and inspire others to get out and explore the history of the world.",
  },
];

const socialFeatures = [
  {
    icon: CommunityIcon,
    title: "Community & Collaboration",
    subtitle: "Connect, Share, and Grow Together",
    description:
      "Join a vibrant community of explorers, historians, and enthusiasts. Share your findings, contribute to the database, and help build the world’s most comprehensive archaeological resource.",
  },
  {
    icon: NewsIcon,
    title: "Digs & Events",
    subtitle: "Find out about digs and events happening in your area.",
    description:
      "Find out about digs and events happening in your area. Get updates on new discoveries, ongoing excavations, and research findings relevant to sites you've visited or want to explore.",
  },
];

const discoverFeatures = [
  {
    icon: ArticlesIcon,
    title: "Historical Insights and Articles",
    subtitle: "Deep dive into the past.",
    description:
      "Access expert-level historical analysis for every site. Our curated content includes archaeological research, historical context, and cultural significance. Understand not just what you're seeing, but why it matters.",
  },
  {
    icon: NewsIcon,
    title: "News and Updates",
    subtitle: "Stay current with latest discoveries.",
    description:
      "Stay current with archaeological breakthroughs. Get updates on new discoveries, ongoing excavations, and research findings relevant to sites you've visited or want to explore.",
  },
];
---

<style>
  .yore-map-bg {
    background-image: url("../assets/images/page-bg.png");
    background-size: cover;
    background-position: top center;
    background-repeat: repeat-y;
  }

  .feature-item {
    background-image: url("../assets/images/divider.svg");
    background-repeat: no-repeat;
    background-position: bottom center;
  }
</style>

<section id="features" class="py-24 lg:py-32 bg-yore-dark yore-map-bg">
  <!-- Header -->
  <div class="">
    <div class="max-w-4xl px-4 mx-auto text-center lg:px-6">
      <h2 class="text-yore-primary">
        <em class="text-yore-discover">Discover</em>, <em class="text-yore-log">Log</em>, and <em class="text-yore-social">Share</em> the World's Historical Wonders
      </h2>
      <p>
        Combining LiDAR mapping, AI analysis, and community knowledge to reveal
        the hidden stories beneath your feet.
      </p>
    </div>
  </div>

  <!-- Explore Section -->
  <div class="py-24 feature-item">
    <div class="px-4 mx-auto max-w-7xl lg:px-6">
      <h3 class="text-yore-explore">Mapping & Discovery</h3>
      <p class="max-w-4xl">
        Browse a living map of archaeological sites, from iconic landmarks to hidden treasures. Filter by era, culture, or location, and plan your next journey with confidence.
      </p>
      <div class="grid gap-8 md:grid-cols-3">
        {
          exploreFeatures.map((feature) => (
            <div class="text-left">
              <div class="flex items-start gap-4 mb-2 lg:mb-4">
                <feature.icon class="text-yore-explore" />
                <div>
                  <h4>{feature.title}</h4>
                  <p class="text-sm text-gray-400">{feature.subtitle}</p>
                </div>
              </div>
              <p>{feature.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>

  <!-- Log Section -->
  <div class="py-24 feature-item">
    <div class="px-6 mx-auto max-w-7xl">
      <h3 class="text-yore-log">Log & Level-Up</h3>
      <p class="max-w-4xl">
        Create a digital journal of your explorations. Save photos, notes, and GPS data for every site you visit, and build a personal archive to revisit and share. Each log, photo, and review you share helps you earn points and progress towards new achievements.
      </p>
      <div class="grid gap-8 md:grid-cols-2">
        {
          logFeatures.map((feature) => (
            <div class="text-left">
              <div class="flex items-start gap-4 mb-2 lg:mb-4">
                <feature.icon class="text-yore-log" />
                <div>
                  <h4>{feature.title}</h4>
                  <p class="text-sm text-gray-400">{feature.subtitle}</p>
                </div>
              </div>
              <p>{feature.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>

  <!-- Social Section -->
  <div class="py-24 feature-item">
    <div class="px-6 mx-auto max-w-7xl">
      <h3 class="text-yore-social">Share & Contribute</h3>
      <p class="max-w-4xl">
        Join a global network of explorers, historians, and archaeologists. Share your findings, contribute new sites to the database, review existing sites, and collaborate on research with like-minded enthusiasts. Celebrate your milestones with the community and see how you rank on leaderboards.
      </p>
      <div class="grid gap-8 md:grid-cols-2">
        {
          socialFeatures.map((feature) => (
            <div class="text-left">
              <div class="flex items-start gap-4 mb-2 lg:mb-4">
                <feature.icon class="text-yore-social" />
                <div>
                  <h4>{feature.title}</h4>
                  <p class="text-sm text-gray-400">{feature.subtitle}</p>
                </div>
              </div>
              <p>{feature.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>

  <!-- Discover Section -->
  <div class="py-24 feature-item">
    <div class="px-6 mx-auto max-w-7xl">
      <h3 class="text-yore-discover">Learn & Discover</h3>
      <p class="max-w-4xl">
        Stay up-to-date with the world's most fascinating sites. Yore provides
        detailed historical content and analysis, helping you understand what
        you're exploring from home or on the go. Yore brings history to your fingertips.
      </p>
      <div class="grid gap-8 md:grid-cols-2">
        {
          discoverFeatures.map((feature) => (
            <div class="text-left">
              <div class="flex items-start gap-4 mb-2 lg:mb-4">
                <feature.icon class="text-yore-discover"  />
                <div>
                  <h4>{feature.title}</h4>
                  <p class="text-sm text-gray-400">{feature.subtitle}</p>
                </div>
              </div>
              <p>{feature.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<AnimateFeatures client:load />
