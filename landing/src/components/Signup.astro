---
import { SignupForm } from "../client/components/SignupForm";
---

<section
  id="signup"
  class="relative flex items-center w-screen h-screen py-16 overflow-hidden bg-yore-dark lg:py-32 aspect-video"
>
  <!-- Background Video -->
  <div class="absolute inset-0 overflow-hidden">
    <video
      class="absolute inset-0 object-cover w-full h-full"
      autoplay
      muted
      loop
      playsinline
      preload="metadata"
    >
      <source
        src="https://cdn.yore.earth/assets/video/flyover.mp4"
        type="video/mp4"
      />
    </video>

    <!-- Dark overlay -->
    <div
      class="absolute inset-0 bg-black/80 shadow-[0_0_30px_rgba(0,0,0,0.8)_inset]"
    >
    </div>
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-4xl px-6 mx-auto text-center">
    <h2 class="text-yore-social">Become a Founding Member</h2>
    <p>Sign up for early access, exclusive rewards, and the chance to help shape the future of digital archaeology.</p>
    <p class="max-w-2xl mx-auto mb-8 text-gray-300">
      Start earning points and achievements from your very first contribution.
    </p>
    <SignupForm client:only />
  </div>
</section>
